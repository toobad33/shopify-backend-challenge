<%- include('include/_header') %>

  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Items</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Item</h2>
            <span class="text-light">Use the form below to update an item</span>
        </div>

    <!-- add item form -->
    <form method="POST" id="update_item">
        <div class="new_item">
            <div class="form-group">
                <label for="name" class="text-light">Name</label>
                <input type="hidden" name="id" value="<%= item._id %>">
                <input type="text" name="name" value="<%= item.name %>" >
            </div>
            <div class="form-group">
                <label for="price" class="text-light">Price</label>
                <input type="text" name="price" value="<%= item.price%>" >
            </div>

            <div class="form-group">
                <label for="description" class="text-light">Description</label>
                <input type="text" name="description" value="<%= item.description%>">
            </div>
            <div class="form-group">
                <label for="quantity" class="text-light">Quantity</label>
                <input type="text" name="quantity" value="<%= item.quantity%>">
            </div>
            <div class="form-group">
                <button type="submit" class="btn text-dark update">Save</button>
            </div>

        </div>
    </form>
    </div>
</main>


<%- include('include/_footer') %>